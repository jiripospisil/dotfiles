[user]
	name = Jiri Pospisil
	email = mekishizufu@gmail.com
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[http]
	sslverify = true
[merge]
	defaultToUpstream = true
[web]
	browser = google-chrome
[push]
	default = simple
[alias]
	fx = !sh -c 'git commit --fixup=$1' -
	fxx = !sh -c 'git commit --fixup=HEAD' -
	sq = !sh -c 'git commit --squash=$1' -
	ri = rebase --interactive --autosquash
